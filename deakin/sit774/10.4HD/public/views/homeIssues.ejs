<%- include('start') -%>
    <%- include('header') -%>
        <link rel="stylesheet" href="../css/home_issues.css">
        <main>
            <div class="container">
                <h1 class="mb-4">Emergency</h1>
                <% emergencyIssues.forEach(e=>{ %>
                    <div class="row mb-4 text-center">
                        <div class="col-lg-6">
                            <img class="rounded mx-auto d-block" style="max-width: 100%;" src='<%= e.imgurl %>'
                                alt="house info">
                        </div>
                        <div class="col-lg-6">
                            <p class="text-center">
                                <%= e.description %>
                            </p>
                        </div>
                    </div>
                    <% }) %>

                        <h1>Urgent List</h1>
                        <div class="row">
                            <% urgencyIssues.forEach(e=>{ %>
                                <div class="my-4 col-lg-6 col-md-6 col-sm-10">
                                    <div class="card col-lg-6" style="width: 18rem;">
                                        <img src='<%= e.imgurl %>' class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <p class="card-text">
                                                <%= e.description %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <div class="row">
                            <div class="offset-lg-5 offset-md-4 offset-sm-4 col-lg-4 col-md-4 col-sm-4">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item <%= parseInt(currentPage) === 1 ? 'disabled' : '' %>">
                                            <a class="page-link"
                                                href="?page=<%= parseInt(currentPage) - 1 %>">Previous</a>
                                        </li>
                                        <% for (let i=1 ; i <=totalPages; i++) { %>
                                            <li class="page-item <%= i === parseInt(currentPage) ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <li
                                                    class="page-item <%= parseInt(currentPage) === parseInt(totalPages) ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="?page=<%= parseInt(currentPage)+1 %>">Next</a>
                                                </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
            </div>
        </main>
        <%- include('footer') -%>
            <%- include('end') -%>